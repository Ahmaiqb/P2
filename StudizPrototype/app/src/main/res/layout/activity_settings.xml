<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/studizfarve"
        app:layout_constraintBottom_toTopOf="@+id/slider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/searchBtn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@color/studizfarve"
            android:src="@drawable/ic_baseline_search_24"
            android:layout_marginLeft="12dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/settings"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="362dp"
        android:layout_height="47dp"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal"
        android:text="Du er logget ind som: ***** "
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.673"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="244dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.042">

        <TextView
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:text="Indtast e-mail og password "
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:text="E-mail: ************ "
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:text="Password: *********"
            android:textAlignment="center"
            android:textSize="20dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/knapBlå"
            android:text="Opdater E-mail og Password" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="244dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.304">

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:text="Studiekort billede "
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/knapBlå"
            android:text="Ændre billede af studiekort" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@color/studizfarve"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/homeBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:outlineSpotShadowColor="@color/studizfarve"
            android:layout_weight="1"
            android:backgroundTint="@color/studizlys"
            android:src="@drawable/ic_baseline_home_hvid" />

        <ImageButton
            android:id="@+id/kategoriBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/studizlys"
            android:src="@drawable/ic_baseline_category_hvid" />

        <ImageButton
            android:id="@+id/studiekortBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/studizlys"
            android:src="@drawable/studiekort_logo2"
            android:scaleType="centerInside"/>

        <ImageButton
            android:id="@+id/settingsBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/studizfarve"
            android:src="@drawable/ic_baseline_settings_hvid" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>